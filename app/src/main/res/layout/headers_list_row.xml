<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:cardview="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:id="@+id/articlecard"
                                    android:background="@drawable/side_nav_bar"
                                    cardview:cardBackgroundColor="@color/cardview_light_background"
                                    cardview:cardCornerRadius="5dp"
                                    cardview:cardElevation="3dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/articleimage"
                android:layout_width="@dimen/image_view_width"
                android:layout_height="@dimen/image_view_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>
                <!--android:src="@drawable/ic_menu_gallery" />-->

        <TextView
                android:id="@+id/articletitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_toEndOf="@+id/articleimage"
                android:maxLines="4"
                android:padding="8dp"
                android:text="dafdafda"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                style="@android:style/TextAppearance.Material.Body1"/>
        <TextView
                android:id="@+id/articlesubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/articletitle"
                android:layout_toEndOf="@+id/articleimage"
                android:maxLines="6"
                android:padding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="dafdafda"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:textAppearance="@android:style/TextAppearance.Material.Body2"
                style="@android:style/TextAppearance.Material.Body2"/>

        <ImageView
                android:id="@+id/issaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_save_black_18dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>